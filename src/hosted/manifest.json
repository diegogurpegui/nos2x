{
  "name": "nos2x-fox",
  "description": "Nostr Signer Extension (for Firefox)",
  "version": "1.15.0.1",
  "homepage_url": "https://github.com/diegogurpegui/nos2x-fox",
  "browser_specific_settings": {
    "gecko": {
      "id": "{fdacee2c-bab4-490d-bc4b-ecdd03d5d68a}",
      "update_url": "https://diegogurpegui.com/nos2x-fox/updates.json"
    }
  },
  "manifest_version": 2,
  "icons": {
    "16": "assets/logo/16x16.png",
    "32": "assets/logo/32x32.png",
    "48": "assets/logo/48x48.png",
    "96": "assets/logo/96x96.png",
    "128": "assets/logo/128x128.png"
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_title": "nos2x-fox",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": ["<all_urls>"],
      "js": ["content-script.js"]
    }
  ],
  "permissions": ["storage"],
  "web_accessible_resources": ["nostr-provider.js"],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';"
}
